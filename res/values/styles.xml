<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header_headline"
           parent="@android:style/TextAppearance.Large">
		<item name="android:height">50dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">#000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#222</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:shadowDx">1.2</item>
		<item name="android:shadowDy">1.2</item>
    </style>
	
	<style name="header_layout">
		<item name="android:background">#dcdcdc</item>
    </style>

	<style name="menuListItem_label"
		   parent="@android:style/TextAppearance.Large">
		<item name="android:height">65dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:gravity">center_vertical</item>
    </style>

	<style name="menuListItem_date"
		   parent="@android:style/TextAppearance.Small">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:typeface">monospace</item>
    </style>
	
	<style name="dayMenu_headerLayout">
		<item name="android:background">#303030</item>
    </style>

	<style name="dayMenu_label"
		   parent="@android:style/TextAppearance.Medium">
		<item name="android:height">35dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:gravity">center_vertical</item>
    </style>

	<style name="dayMenu_date"
		   parent="@android:style/TextAppearance.Small">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:typeface">monospace</item>
		<item name="android:textColor">#dcdcdc</item>
    </style>
	
	<style name="mealListItem_label"
		   parent="@android:style/TextAppearance.Medium">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:textColor">#ff8000</item>
    </style>
	
	<style name="mealListItem_empty"
		   parent="@android:style/TextAppearance.Small">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:paddingTop">5dp</item>
    </style>
	
	<style name="dishListItem_name"
		   parent="@android:style/TextAppearance.Large">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:paddingRight">25dp</item>
		<item name="android:paddingBottom">5dp</item>
    </style>
</resources>
