<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	          android:id="@+id/dayMenu_rootLayout"
			  android:layout_width="fill_parent" 
			  android:layout_height="wrap_content" 
			  android:orientation="vertical"
			  android:visibility="gone" >

	<LinearLayout android:layout_width="fill_parent" 
				  android:layout_height="wrap_content" 
				  android:orientation="horizontal"
				  style="@style/dayMenu_headerLayout">

		<TextView android:id="@+id/dayMenu_labelText"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
			      style="@style/dayMenu_label" />

		<TextView android:id="@+id/dayMenu_dateText"
				  android:layout_width="fill_parent"
				  android:layout_height="fill_parent"
			      style="@style/dayMenu_date" />

	</LinearLayout>

	<ListView android:id="@+id/dayMenu_mealList"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content" />

</LinearLayout>
